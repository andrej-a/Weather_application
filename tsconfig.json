{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES6", "DOM"],
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "include": ["src", "src/index.tsx"],
  "exclude": ["node_modules", "dist"],
}